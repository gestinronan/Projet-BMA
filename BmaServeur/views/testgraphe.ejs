     <!-- Included CSS Files (Compressed) -->
  <link rel="stylesheet" href="/stylesheets/foundation.min.css">
  <link rel="stylesheet" href="/stylesheets/app.css">

  <script src="/javascript/modernizr.foundation.js"></script>
  </head>
  <h1>Test Graph<a href="http://148.60.11.208:3000/">Bike station</a>, <a href="http://148.60.11.208:3000/metro"> Metro link</a></h1>
  <body>

  	<!-- Div which contains the form stuff-->
	<div class="row">
		<div class="five columns">
		<hr>
		<p>Départ:</p>
		<select id = 'depart'>
				<% for(i=0; i< dataBus.length; i++){ %>
				<option value= <%= "Bus:" + dataBus[i].Stop_id %> > <%= dataBus[i].Stop_name%> </option>
			<% } %>	
			<% for(i=0; i< dataBike.length; i++){ %>
				<option value= <%= "Bike:" + dataBike[i].BikeStop_id%> > <%= dataBike[i].BikeStop_name%> </option>
			<% } %>	
			<% for(i=0; i< dataMetro.length; i++){ %>
				<option value= <%= "Metro:" + dataMetro[i].MetroStop_id%> > <%=dataMetro[i].MetroStop_name%> </option>
			<% } %>	

		</select>

		<p>Arrivé:</p>
		<select id='arrive'>
				<% for(i=0; i< dataBus.length; i++){ %>
				<option value= <%= "Bus:" + dataBus[i].Stop_id %> > <%= dataBus[i].Stop_name%> </option>
			<% } %>	
			<% for(i=0; i< dataBike.length; i++){ %>
				<option value= <%= "Bike:" + dataBike[i].BikeStop_id%> > <%= dataBike[i].BikeStop_name%> </option>
			<% } %>	
			<% for(i=0; i< dataMetro.length; i++){ %>
				<option value= <%= "Metro:" + dataMetro[i].MetroStop_id%> > <%=dataMetro[i].MetroStop_name%> </option>
			<% } %>	

		</select>


		<p>Type de transport:</p>
		<input type="checkbox" name="bus" id="bus" value="bus" checked=true>Bus<br>
		<input type="checkbox" name="bike" id="bike" value="bike" checked=true>Bike<br>
		<input type="checkbox" name="metro" id="metro" value="metro" checked=true>Metro
		<br>
		<hr>
		<input type="submit" onclick='javascript: callServer()'>
	</div>

	<!-- Div which will contains the result -->
	<div id='result' class="seven columns">
	

	</div>
</div>


	  <!-- Included JS Files (Compressed) -->
  <script src="/javascript/jquery.js"></script>
  <script src="/javascript/foundation.min.js"></script>
  
  <!-- Initialize JS Plugins -->
  <script src="/javascript/app.js"></script>

  
    <script>
    $(window).load(function(){
      $("#featured").orbit();
    });
    </script> 

  </body>
</html>